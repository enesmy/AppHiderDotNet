<Window x:Class="AppHiderNet.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Overlay" 
        Height="50" Width="50"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Focusable="False">
    <Grid>
    <Grid>
        <!-- Main Container with Events -->
        <Grid x:Name="MainContainer"
              Background="Transparent"
              MouseLeftButtonDown="Window_MouseLeftButtonDown"
              MouseMove="MainContainer_MouseMove"
              MouseLeftButtonUp="MainContainer_MouseLeftButtonUp"
              MouseRightButtonUp="Window_MouseRightButtonUp">
            
            <!-- Shadow/Glow -->
            <Ellipse Width="40" Height="40" Fill="#80000000" Margin="0,4,0,0">
                <Ellipse.Effect>
                    <BlurEffect Radius="8"/>
                </Ellipse.Effect>
            </Ellipse>
            
            <!-- Main Sphere -->
            <Border x:Name="BubbleBorder" 
                    Width="40" Height="40"
                    CornerRadius="20" 
                    BorderThickness="1" 
                    BorderBrush="#60FFFFFF">
                <Border.Background>
                    <RadialGradientBrush GradientOrigin="0.3,0.3">
                        <GradientStop Color="#CC3B82F6" Offset="0"/>
                        <GradientStop Color="#E61E3A8A" Offset="1"/>
                    </RadialGradientBrush>
                </Border.Background>
                
                <!-- Shine Effect -->
                <Grid>
                    <Ellipse HorizontalAlignment="Left" VerticalAlignment="Top" Width="25" Height="18" Margin="5,3,0,0">
                        <Ellipse.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#90FFFFFF" Offset="0"/>
                                <GradientStop Color="#00FFFFFF" Offset="1"/>
                            </LinearGradientBrush>
                        </Ellipse.Fill>
                        <Ellipse.RenderTransform>
                            <RotateTransform Angle="-30"/>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    
                    <!-- Icon (Eye/Hide) -->
                    <Path Data="M12,4.5C7,4.5 2.73,7.61 1,12C2.73,16.39 7,19.5 12,19.5C17,19.5 21.27,16.39 23,12C21.27,7.61 17,4.5 12,4.5M12,17A5,5 0 0,1 7,12A5,5 0 0,1 12,7A5,5 0 0,1 17,12A5,5 0 0,1 12,17M12,9A3,3 0 0,0 9,12A3,3 0 0,0 12,15A3,3 0 0,0 15,12A3,3 0 0,0 12,9Z" 
                          Fill="White"
                          Stretch="Uniform"
                          Width="20" Height="20"
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center">
                        <Path.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="2" ShadowDepth="1" Opacity="0.5"/>
                        </Path.Effect>
                    </Path>
                </Grid>
            </Border>
        </Grid>
    </Grid>
    </Grid>
</Window>
