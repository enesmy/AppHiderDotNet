<Window x:Class="AppHiderNet.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppHiderNet"
        mc:Ignorable="d"
        Title="About" Height="480" Width="500"
        Icon="app_icon.png"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" ResizeBorderThickness="5" GlassFrameThickness="-1"/>
    </WindowChrome.WindowChrome>

    <Border Background="{StaticResource GlassBackgroundBrush}" 
            BorderBrush="{StaticResource GlassBorderBrush}" 
            BorderThickness="1" 
            CornerRadius="16"
            MouseLeftButtonDown="Window_MouseLeftButtonDown">
        
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="â„¹" 
                               Foreground="{StaticResource GlassTextBrush}" 
                               FontSize="24" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <TextBlock Text="About" 
                               Foreground="{StaticResource GlassTextBrush}" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <Button Grid.Column="1"
                        Content="âœ•" 
                        Width="32" Height="32"
                        Padding="0"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="{StaticResource GlassTextSecondaryBrush}"
                        FontSize="16"
                        Click="CloseButton_Click"
                        WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="btnBorder" Background="Transparent" CornerRadius="16">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="btnBorder" Property="Background" Value="#20FFFFFF"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="btnBorder" Property="Background" Value="#40FF4444"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <!-- About Content -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- App Icon (if you want to display it) -->
                <Border Width="80" Height="80" 
                        Background="{StaticResource AccentGradientBrush}"
                        CornerRadius="20"
                        Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#6366F1" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
                    </Border.Effect>
                    <TextBlock Text="ðŸ”’" 
                               FontSize="48" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                </Border>

                <TextBlock Text="App Hider" 
                           Foreground="{StaticResource GlassTextBrush}" 
                           FontSize="28" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>
                
                <TextBlock x:Name="VersionText"
                           Text="Version 1.0.1" 
                           Foreground="{StaticResource GlassTextSecondaryBrush}" 
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
                
                <TextBlock Text="Hide and manage your applications with ease" 
                           Foreground="{StaticResource GlassTextSecondaryBrush}" 
                           FontSize="13"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           MaxWidth="300"
                           Margin="0,0,0,20"/>

                <Border Background="#10FFFFFF" 
                        BorderBrush="{StaticResource GlassBorderBrush}" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="15,10"
                        MaxWidth="320">
                    <StackPanel>
                        <TextBlock x:Name="CopyrightText"
                                   Text="Â© 2024 App Hider"
                                   Foreground="{StaticResource GlassTextBrush}" 
                                   FontSize="12" 
                                   TextAlignment="Center"/>
                        <TextBlock Text="All rights reserved" 
                                   Foreground="{StaticResource GlassTextSecondaryBrush}" 
                                   FontSize="11"
                                   TextAlignment="Center"
                                   Margin="0,3,0,0"/>
                    </StackPanel>
                </Border>

                <!-- GitHub Link -->
                <Border Background="#10FFFFFF" 
                        BorderBrush="{StaticResource GlassBorderBrush}" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="12,8"
                        MaxWidth="320"
                        Margin="0,10,0,0"
                        Cursor="Hand"
                        MouseLeftButtonDown="GitHubLink_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ”—" 
                                   FontSize="14" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>
                        <TextBlock Foreground="{StaticResource GlassTextBrush}" 
                                   FontSize="12"
                                   VerticalAlignment="Center">
                            <Run Text="github.com/enesmy"/>
                        </TextBlock>
                    </StackPanel>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#20FFFFFF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                </Border>
            </StackPanel>

            <!-- Close Button -->
            <Button Grid.Row="2" 
                    Content="Close" 
                    Width="120" 
                    Height="40" 
                    HorizontalAlignment="Center"
                    Click="CloseButton_Click"
                    Background="{StaticResource AccentGradientBrush}"
                    BorderThickness="0"/>
        </Grid>
    </Border>
</Window>
