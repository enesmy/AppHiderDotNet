<Window x:Class="AppHiderNet.BlurOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BlurOverlay" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="False"
        ShowActivated="False"
        ResizeMode="NoResize"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Grid>
        <!-- Completely opaque white layer with maximum blur -->
        <Rectangle Fill="#FFFFFFFF">
            <Rectangle.Effect>
                <BlurEffect Radius="100"/>
            </Rectangle.Effect>
        </Rectangle>
        
        <!-- Very dark overlay for complete privacy -->
        <Rectangle Fill="#E0000000"/>
        
        <!-- Another blur layer for extra privacy -->
        <Rectangle Fill="#C0808080">
            <Rectangle.Effect>
                <BlurEffect Radius="80"/>
            </Rectangle.Effect>
        </Rectangle>
        
        <!-- Text overlay -->
        <TextBlock Text="ðŸ”’ CENSORED" 
                   FontSize="96" 
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   Opacity="1.0">
            <TextBlock.Effect>
                <DropShadowEffect Color="Black" BlurRadius="30" ShadowDepth="5" Opacity="1.0"/>
            </TextBlock.Effect>
        </TextBlock>
    </Grid>
</Window>
