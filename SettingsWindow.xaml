<Window x:Class="AppHiderNet.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppHiderNet"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="600"
        Icon="app_icon.png"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">
    
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" ResizeBorderThickness="5" GlassFrameThickness="-1"/>
    </WindowChrome.WindowChrome>

    <Border Background="{StaticResource GlassBackgroundBrush}" 
            BorderBrush="{StaticResource GlassBorderBrush}" 
            BorderThickness="1" 
            CornerRadius="16"
            MouseLeftButtonDown="Window_MouseLeftButtonDown">
        
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="⚙" 
                               Foreground="{StaticResource GlassTextBrush}" 
                               FontSize="24" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <TextBlock Text="Settings" 
                               Foreground="{StaticResource GlassTextBrush}" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <Button Grid.Column="1"
                        Content="✕" 
                        Width="32" Height="32"
                        Padding="0"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="{StaticResource GlassTextSecondaryBrush}"
                        FontSize="16"
                        Click="CloseButton_Click"
                        WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="btnBorder" Background="Transparent" CornerRadius="16">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="btnBorder" Property="Background" Value="#20FFFFFF"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="btnBorder" Property="Background" Value="#40FF4444"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <!-- Settings Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,20">
                <StackPanel>
                    <!-- General Settings Section -->
                    <Border Background="#10FFFFFF" 
                            BorderBrush="{StaticResource GlassBorderBrush}" 
                            BorderThickness="1" 
                            CornerRadius="12" 
                            Padding="20" 
                            Margin="0,0,0,15">
                        <StackPanel>
                            <TextBlock Text="General" 
                                       Foreground="{StaticResource GlassTextBrush}" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,15"/>
                            
                            <!-- Start with Windows -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Start with Windows" 
                                               Foreground="{StaticResource GlassTextBrush}" 
                                               FontSize="14"/>
                                    <TextBlock Text="Application starts automatically on Windows startup" 
                                               Foreground="{StaticResource GlassTextSecondaryBrush}" 
                                               FontSize="12" 
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                                <CheckBox x:Name="StartWithWindowsCheckBox" 
                                          Grid.Column="1" 
                                          VerticalAlignment="Center"
                                          Checked="StartWithWindows_Changed"
                                          Unchecked="StartWithWindows_Changed"/>
                            </Grid>

                            <!-- Start Minimized -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Start minimized" 
                                               Foreground="{StaticResource GlassTextBrush}" 
                                               FontSize="14"/>
                                    <TextBlock Text="Application starts in system tray" 
                                               Foreground="{StaticResource GlassTextSecondaryBrush}" 
                                               FontSize="12" 
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                                <CheckBox x:Name="StartMinimizedCheckBox" 
                                          Grid.Column="1" 
                                          VerticalAlignment="Center"/>
                            </Grid>

                            <!-- Show Overlay Button -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Show overlay button" 
                                               Foreground="{StaticResource GlassTextBrush}" 
                                               FontSize="14"/>
                                    <TextBlock Text="Floating quick access button on screen" 
                                               Foreground="{StaticResource GlassTextSecondaryBrush}" 
                                               FontSize="12" 
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                                <CheckBox x:Name="ShowOverlayCheckBox" 
                                          Grid.Column="1" 
                                          VerticalAlignment="Center"
                                          Checked="ShowOverlay_Changed"
                                          Unchecked="ShowOverlay_Changed"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Password Protection Section -->
                    <Border Background="#10FFFFFF" 
                            BorderBrush="{StaticResource GlassBorderBrush}" 
                            BorderThickness="1" 
                            CornerRadius="12" 
                            Padding="20">
                        <StackPanel>
                            <TextBlock Text="Security" 
                                       Foreground="{StaticResource GlassTextBrush}" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,15"/>
                            
                            <!-- Password Protection -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="Password protection" 
                                               Foreground="{StaticResource GlassTextBrush}" 
                                               FontSize="14"/>
                                    <TextBlock Text="Require password to show hidden applications" 
                                               Foreground="{StaticResource GlassTextSecondaryBrush}" 
                                               FontSize="12" 
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                                <CheckBox x:Name="PasswordProtectionCheckBox" 
                                          Grid.Column="1" 
                                          VerticalAlignment="Center"
                                          Checked="PasswordProtection_Changed"
                                          Unchecked="PasswordProtection_Changed"/>
                            </Grid>

                            <!-- Master Password -->
                            <StackPanel Margin="0,0,0,12">
                                <TextBlock Text="Master password" 
                                           Foreground="{StaticResource GlassTextBrush}" 
                                           FontSize="14"
                                           Margin="0,0,0,5"/>
                                <PasswordBox x:Name="MasterPasswordBox" 
                                             Height="35"
                                             Background="#10FFFFFF"
                                             BorderBrush="{StaticResource GlassBorderBrush}"
                                             Foreground="{StaticResource GlassTextBrush}"
                                             Padding="10,8"/>
                            </StackPanel>

                            <!-- Change Password Button -->
                            <Button Content="Change Password" 
                                    Width="150" 
                                    Height="35" 
                                    HorizontalAlignment="Left"
                                    Click="ChangePassword_Click"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- Action Buttons -->
            <Grid Grid.Row="2">
                <Button Content="Save" 
                        Width="120" 
                        Height="40" 
                        HorizontalAlignment="Right"
                        Click="Save_Click"
                        Background="{StaticResource AccentGradientBrush}"
                        BorderThickness="0"/>
            </Grid>
        </Grid>
    </Border>
</Window>
